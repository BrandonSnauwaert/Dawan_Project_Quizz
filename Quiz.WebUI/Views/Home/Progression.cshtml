@model Quiz.Core.Models.Question
@using Quiz.Core.Models
@{ ViewBag.Title = "Progression"; }

<div class="container">
    <h1>Questionnaire</h1>
    <br />

    <div class="center" style="margin-top:10%">

    <h2>@Model.QstText</h2>
     <h4>@Model.NumOrder/@Session["Nbre_Qst"]</h4>
    <h3>
        @using(Html.BeginForm("Next", "Home", FormMethod.Post))
        {
            foreach (Answer rep in Model.Answers)
            {
                if (!Model.IsMultiple)
                {
                    
                      @Html.RadioButton("selectedSimpleRep", rep.Id) 
                    <input type="radio" style="opacity:0"/>                
                }
                else
                {

                  <input class="form-check-input" type="checkbox" name="selectedRep[]" value="@rep.Id"  id=" flexCheckDefault" style="margin:1px" /> 
                }
                      @rep.RepText
               <br/> 
            }
                    <input type="submit" value="Soumettre" class="primary" style="margin-top:2%; border-radius:2px" /> 
         }
    </h3>
    </div>
</div>

