@model Quiz.Core.ViewModels.QuizThemesViewModel

@{ ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="wrapper style1">
    <div class="container">


        <h2>Création d'un nouveau quiz</h2>


        @using (Html.BeginForm("Create", "Quiz", FormMethod.Post, new { encType = "multipart/form-data" }))
        {
@Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row gtr-uniform gtr-50">


                                    <div class="col-10">
                                        @Html.EditorFor(model => model.Quiz.Title, new { htmlAttributes = new { @placeholder = "Titre du quiz" } })
                                        @Html.ValidationMessageFor(model => model.Quiz.Title, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-10">
                                        @Html.DropDownListFor(model => model.Quiz.ThemeName, new SelectList(Model.Themes, "ThemeName", "ThemeName"), new { @class = "form-control", @placeholder = "Theme" })
                                        @Html.ValidationMessageFor(model => model.Quiz.ThemeName, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-3">
                                        <label class="button">
                                            <input type="file" name="Image" style="display:none;" />
                                            Ajouter une image
                                        </label>
                                    </div>

                                    <div class="col-12">
                                        <ul class="actions">
                                            <li>
                                                <input type="submit" value="Create" class="primary" />
                                            </li>
                                            <li>
                                                <input type="reset" value="Reset" />
                                            </li>
                                        </ul>

                                    </div>




                                </div>}
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
