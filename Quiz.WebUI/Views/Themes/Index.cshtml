@model IEnumerable<Quiz.Core.Models.Theme>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12" style="margin-left: 5%;margin-top:3%" >
    @Html.ActionLink("Ajouter un Theme", "Create", null, new { @class = "button" })
</div>
<table class="table" style="margin-top:3%; width:100%; margin-left:5px;margin-right:5px">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ThemeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
