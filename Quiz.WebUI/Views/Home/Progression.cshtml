@model Quiz.Core.Models.Question
@using Quiz.Core.Models
@{ ViewBag.Title = "Progression"; }

<div class="container">
    <h1>Questionnaire</h1>
    <br />

    <h2>Question @Model.NumOrder: @Model.QstText</h2>

    <h3 style="margin:10%">
        @using(Html.BeginForm("Next", "Home", FormMethod.Post))
        {
            foreach (Answer rep in Model.Answers)
            {
                if (!Model.IsMultiple)
                {
                    
                      @Html.RadioButton("selectedSimpleRep", rep.Id) 
                    <input type="radio" style="opacity:0"/>                }
                else
                {

                  <input class="form-check-input" type="checkbox" name="selectedRep[]" value="@rep.Id"  id=" flexCheckDefault" /> 
                }
                      @rep.RepText
               <br/> 
            }
                    <input type="submit" value="Suivant" class="progress" style="margin-top:2%" /> 
         }
    </h3>
</div>

