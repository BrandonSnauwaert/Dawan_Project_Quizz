@model IEnumerable<Quiz.Core.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quiz.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QstText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMultiple)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOrder)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quiz.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QstText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsMultiple)
            <label for="check-box"></label>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumOrder)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
