@model Quiz.Core.ViewModels.QuizzesThemesViewModel

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div id="main" class="wrapper style1">
    <div class="container">
        <header class="major">
            <h2>Liste des quizs</h2>
        </header>
        <div class="row gtr-150">
            <div class="col-2">
                <section id="sidebar">
                    <ul class="alt">
                       <li> @Html.ActionLink("All", "Index", null, new { @class = Request["theme"] == null ? "list-group-item active" : "list-group-item" })</li>
                        @foreach (var item in Model.Themes)
                        {
                    <li>@Html.ActionLink(item.ThemeName, "Index", new { theme = item.ThemeName }, new { @class = Request["theme"] == item.ThemeName ? "list-group-item active" : "list-group-item" })</li>}
                    </ul>
                </section>
            </div>
            <div class="col-10">
                <div class="row gtr-25">
                    @foreach (var quiz in Model.Quizzes)
                    {
                <div class="col-3 col-6-medium col-12-small">
                    <div style="background:rgba(255,255,255,0.05); border-radius: 4px;">


                        <div class="image fit align-center" style="margin-bottom:1rem">
                            <img src="~/Content/Images/Quiz/@quiz.Image" />

                        </div>
                        <div class="align-center">
                            <h3>@quiz.Title</h3>

                            <ul style="padding:0;display:flex; list-style:none; justify-content: space-around">
                                <li style="padding:0">
                                    @Html.ActionLink("Edit", "Edit", new { id = quiz.Id })
                                </li>
                                <li style="padding:0">
                                    @Html.ActionLink("Details", "Details", new { id = quiz.Id })
                                </li>
                                <li style="padding:0">
                                    @Html.ActionLink("Delete", "Delete", new { id = quiz.Id })
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>}
                </div>
            </div>
        </div>
    </div>
</div>






<div class="wrapper style1 container">

    <div class="row gtr-50 gtr-uniform">
        <div class="col-9 row">


            
        </div>
    </div>



</div>

